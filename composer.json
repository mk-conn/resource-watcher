{
    "name":"yosymfony/resource-watcher",
    "description": "A simple resource watcher using Symfony Finder",
    "keywords": ["resources","watcher","finder","symfony"],
    "license": "MIT",
    "homepage": "http://yosymfony.com",
    "authors": [
        {
            "name": "Victor Puertas",
            "email": "vpgugr@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "symfony/finder": "^7"
    },
    "require-dev": {
        "symfony/filesystem": "^7",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Yosymfony\\ResourceWatcher\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
